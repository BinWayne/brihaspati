$page.setTitle("$brih_reg2 $brih_courses $brih_list")
$page.setBgColor($ui.bgcolor)
$!data.getMessage()

<table bgcolor="$ui.menuColor" width=100%>
<tr><td>
	<font face="$ui.sansSerifFonts" size=3>
	<a href=$link.setPage("BrihaspatiLogin.vm").addPathInfo("lang",$lang)>Inloggen Pagina</a> |
	Geregistreerd Cursussen
	</font>
	</td>
</tr>
</table>
<form name="frm" method="Post">
#set($listConf = ["10","20","30","40","50"] )
<table align="left" width="100%" bgcolor="$ui.tableColor">
<tr><td>
	#if($lang == "hindi")
		<b>Waarde voor Lijst Selecteer</b> &nbsp;&nbsp;
	#else
		<b>Selecteer Waarde voor Lijst</b> &nbsp;&nbsp;
	#end
<select name="SearchList" onChange="ShowList(document.frm,this);"/>
<option value=$ListConf_str>$ListConf_str</option>
#foreach($list in $listConf)
	#if($ListConf_str != $list)
		<option value=$list>$list</option>
	#end
#end
</select>     
</td>
<td><b>Zoeken Cursussen</b>&nbsp;&nbsp;<input type="text" name="SearchKey" value="$!SearchKey" onSelect="ShowList(document.frm,this);"/></td>
</tr>
</table>
#if($status!="empty")
#set($headings = ["Cursus ID ","Cursus Naam","Status","Instructeur Naam","Instructeur's E-mailadres"] )
<table align="left" bgcolor="$ui.menuColor" width=100%>
<tr>
	<td><b>Geregistreerd Cursussen</b></font></td>
</tr>
</table>
<table align="left" width=100% bgcolor="$ui.tableColor">
<tr width=100%>
	#foreach ($heading in $headings)
	<td><b>$heading</b></td>
	#end
</tr>
	#foreach($entry in $allcourse)
	#if($velocityCount%2==0)
	<tr bgcolor="$ui.tableColor">
	#else
	<tr bgcolor="$ui.menuColor">
	#end
		##entryCell($!entry.getGroupName())
		##entryCell($entry.getCourseName())
		<td>$!entry.getGroupName()</td>
		<td>$entry.getCourseName()</td>
		#if ($entry.getActive()=="1")
			<td><font color="Green">Actief</font></td>
		#else
		 	<td><font color="Red">Inactief</font></td>
		#end
		<td>$!entry.getInstructorName()</td>
		<td><a href=mailto:$!entry.getEmail()>$!entry.getEmail()</a></td>
		##entryCell($!entry.getInstructorName())
		##entryCell("<a href=mailto:$!entry.getEmail()>$!entry.getEmail()</a>")
	</tr>
	#end
	<tr bgcolor="$ui.menuColor">
	<td colspan=5>
        	#if($total_size <= $ListConf)
         	<u><font color="white">Eerste</font></u> &nbsp;
         	<u><font color="white">Volgende</font></u> &nbsp;
         	<u><font color="white">Vorige</font></u> &nbsp;
         	<u><font color="white">Laatste</font></u> &nbsp;
          	#elseif($startIndex== $ListConf_str)
          	<u><font color="white">Eerste</font></u> &nbsp;
          	<u><font color="white">Vorige</font></u> &nbsp;
          	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$startIndex)">Volgende</a> &nbsp;
          	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_last)">Laatste</a> &nbsp;
         	#elseif($endIndex == $total_size || $endIndex > $total_size)
         	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_first)">Eerste</a> &nbsp;
         	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_pre)">Vorige</a> &nbsp;
         	<u><font color="white">Volgende</font></u> &nbsp;
         	<u><font color="white">Laatste</font></u> &nbsp;
          	#else
           	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_first)">Eerste</a> &nbsp;
           	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_pre)">Vorige</a> &nbsp;
           	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$startIndex).addPathInfo("end",$endIndex)">Volgende</a> &nbsp;
            	<a href="$link.setPage("ViewCourseList.vm").addPathInfo("startIndex",$check_last)">Laatste</a> &nbsp;
		#end


	</td>
	</tr>
</table>
#end
</form>
<SCRIPT LANGUAGE="javascript">
	function ShowList(frm,field)
	{
		frm.submit();
	}
</SCRIPT>
