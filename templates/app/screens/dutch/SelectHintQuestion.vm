$page.setTitle("$brih_select $brih_hint $brih_qus")
$!data.getMessage()
#set ($lang=$data.getUser().getTemp("lang" ).toString())
<table bgcolor="$ui.menuColor" width=100%>
<tr><td>
	<a href=$link.setPage("BrihaspatiLogin.vm").addPathInfo("lang",$lang)>Inloggen Pagina</a> | Selecteer Hint Vraag
</td></tr>
</table>
<table align=left bgcolor="$ui.tableColor" width=100%>
<form name=frm method="post" action="$link.setPage("BrihaspatiLogin.vm").setAction("ForgotPassword")">
<tr><td>
        	#if($lang=="hindi")
                        <b> Hint Vraag Selecteer</b>
                #else
                        <b> Selecteer Hint Vraag</b>
                #end
</td></tr>
<tr bgcolor="$ui.menuColor">
<td>
		#if($lang=="hindi")
			Vraag Selecteer
		#else
		        Selecteer Vraag
		#end
</td>
<td>
             	<select name="qid" size=1>
        	 #foreach($i in $question)	  
	 	 	<option value="$i.getQuestionId()">$i.getQuestionName()
		 #end
		</option>
	      </select>
</tr>
<tr>
       	#formCell("Uw Ga  Antwoord in" "answer" "")
</tr>
	<tr bgcolor="$ui.menuColor">
        <td colspan=2 align=left>
	  <input type="hidden" name="actionName">
	  <input type="hidden" name="uid" value=$uid>
	  <input type="hidden" name="lang" value=$lang>
	  <input type="button" name="eventSubmit_doInsertHint" value="Indienen" onClick="checkAnswer(document.frm,this);"/>
	</td>
	</tr>	 
</table>
</form>
</body>
</table>
<SCRIPT LANGUAGE="javascript">
	function checkAnswer(frm,field)
	{
		if(frm.answer.value!="")
		{
				frm.actionName.value=field.name;
				frm.submit();
		}
		else
		{
		        alert("Please Fill The Answer!!");
		}
	}
</SCRIPT>
