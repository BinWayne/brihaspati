$page.setBgColor($ui.bgcolor)
$page.setTitle("View Marks")
#set ($lang=$data.getUser().getTemp("lang" ).toString())

<table bgcolor="$ui.tableColor" width=100%>
<tr>
<td>
<font face="$ui.sansSerifFonts"><b>
<a href=$link.setPage("call,IndexHome.vm")>家</a> |
<a href=$link.setPage("call,CourseMgmt_User,CourseHome.vm")>$course</a> | #if($lang=="hindi") マークス 視野  #else 視野 マークス #end
</font>
</td>
</tr>
</table>

<br>
$!data.getMessage()
<form enctype="multipart/form-data" >
    <table align="center" bgcolor="$ui.bgcolor" cellpadding="0">
    #if($status != "Blank")	
      <tr>
	<td>
      	<b><u>マークス 〜で $course</u><b><br><br>
	</td>
      </tr>
      <tr>
	      	<table border="1" cellpadding="0" cellspacing="1" align="center">
			<tr>
				#foreach($heading in $markHeading)
      					<th bgcolor="$ui.menuColor">&nbsp;&nbsp;$heading&nbsp;&nbsp;</th>
				#end
			</tr>
			<tr>	
				#foreach($entry in $marks)
					<td align="center" bgcolor="$ui.tableColor">$entry</td>
				#end
			</tr>
      		</table>
      </tr>
    	#end
      <tr>
		#if($marksDSize == "0")
			<td colspan=3> 印はのためにアップロードされなかった  '$data.getUser().getUserName()'!!	</td>
		#end
		#if($Exp == "MExp")
			<td colspan=3> 結果は今まで宣言されない! </td>
		#end
		#if($Exp == "Exp")
			<td colspan=3> ファイル形式は間違っている-は、ユーザ名の不足しています。 	</td>
		#end
      </tr>	
    </table>
</form>
