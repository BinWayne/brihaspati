			#foreach($quesAns in $Ques_Ans)
			<option value="$quesAns">$quesAns
			#end
		#else
			<option value=$!ans>$!ans
			#foreach($quesAns in $Ques_Ans)
				#if($quesAns != $!ans)
				<option value="$quesAns">$quesAns
				#end
			#end
		#end
      	</select> 
   	</td>
 </tr> 
  <tr>
	<td width=30% align="centre"> 
     	<b><font face="$ui.sansSerifFonts">Hint</font></b>
   	</td>
