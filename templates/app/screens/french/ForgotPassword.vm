		<tr><td width="15"> <font face="$ui.sansSerifFonts">Ouverture Nom </td>
                <td width="40"><input type="text" size="30" name="username" value=""></td>
</tr>
     #* 		<tr><td>
			#formCell("Ouverture Nom" "username" "")
      		</td></tr>*#
        	<tr bgcolor="$ui.menuColor"> 
	  	##<td align=center colspan=2 bgcolor="$ui.menuColor">
	  	<td colspan=2>
			<input type="hidden" name="lang" value=$lang>
            		<input type="hidden" name="actionName" >
            		#if($lang == "hindi")
			<input type="button" name="eventSubmit_doCheckUser" value="Nouveau mot de passe  Obtenir  " onClick="checkUserId(document.frm,this);">
			#else
			<input type="button" name="eventSubmit_doCheckUser" value="Obtenir  Nouveau mot de passe " onClick="checkUserId(document.frm,this);">
			#end
          	</td> 
        	</tr>
</table>
</form>
#end

<SCRIPT LANGUAGE="javascript">
        function checkUserId(frm,field)
        {
                if(frm.username.value=="")
                {
                        alert("Please Fill The User Name!!");
                }
                else
                {
                                frm.actionName.value=field.name;
                                frm.submit();
                }
        }
        function checkAnswer(frm,field)
        {
                if(frm.HintAns.value=="")
                {
                        alert("Please Fill Hint Answer!!");
                }
                else
                {
                                frm.actionName.value=field.name;
                                frm.submit();
                }
        }
</SCRIPT>
