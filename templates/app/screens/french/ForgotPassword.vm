#if($status == "HintQus")
<form name=frm method="post" action="$link.setPage("BrihaspatiLogin.vm").setAction("ForgotPassword")">
<table align=left bgcolor="$ui.tableColor">
           	<tr><td><font size=4><b>Conseil  Question</b></font></td></tr>
        	<tr>
                	#entry1Cell("Question" "$qname")
        	</tr>
                <tr>
                	#formCell("Entrez dans Votre Réponse" "HintAns" "")
                </tr>
        	<tr bgcolor="$ui.menuColor">
        	<td colspan=2>
			<input type="hidden" name="lang" value=$lang>
          		<input type="hidden" name="actionName">
          		<input type="hidden" name="uid" value=$uid>
          		<input type="hidden" name="username" value=$username>
          		<input type="button" name="eventSubmit_doSendNewPassword" value="Soumettre " onClick="checkAnswer(document.frm,this);"/>
        	</td>
        	</tr>
</table>
</form>
#else
<form name=frm method="post" action="$link.setPage("ForgotPassword.vm").setAction("ForgotPassword")">
